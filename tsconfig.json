{
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules/", "dist/", "dist2/", "eslint.config.ts", "**/.dagger/", "/apps/"],
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitOverride": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noEmit": true,
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": false,
		"preserveWatchOutput": true
	}
}
